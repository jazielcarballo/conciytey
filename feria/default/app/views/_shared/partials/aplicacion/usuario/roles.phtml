<?php $res = Load::model('roles')->find('limit: 8', 'order: id DESC'); ?>
<?php $actual = Form::getFieldValue('rol.id') //vriable con el id del registro que se edita ?>

<ul class="nav nav-tabs nav-stacked">
    <li class="<?php if (!$actual) echo 'active'; ?>">
        <?php echo Html::linkAction("crear", 'Agregar Nuevo','class="btn btn-primary"'); ?>
    </li>
    <?php foreach ($res as $e): ?>
        <li class="<?php if ($e->id == $actual) echo 'active'; ?>">
            <?php $content = h(strtoupper($e->rol)); ?>
            <?php echo Html::linkAction("editar/$e->id", $content); ?>
        </li>
    <?php endforeach; ?>
    <li>
        <?php echo Html::linkAction("", 'Ver Todos...'); ?>
    </li>
</ul>